<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx" >
	
	<fx:Script>
		<![CDATA[
			private static var _instance:Tip;
			public static function get instance():Tip{
				if(_instance == null) _instance = new Tip();
				return _instance;
			}
			
			public function setText(value:String, isHtml:Boolean=false):void{
				if(isHtml){
					txt.htmlText = value;
				}else{
					txt.text = value;
				}
			}
		]]>
	</fx:Script>
	
	<fx:Declarations>
	</fx:Declarations>
	<mx:Label id="txt"/>
</s:Group>
