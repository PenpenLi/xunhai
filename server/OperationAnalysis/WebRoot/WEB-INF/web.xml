<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">

	<display-name></display-name>
	<welcome-file-list>
		<welcome-file>login.jsp</welcome-file>
	</welcome-file-list>

	<!-- 初始化 -->
	<servlet>
		<servlet-name>InitServlet</servlet-name>
		<servlet-class>com.servlet.InitServlet</servlet-class>
		
		<init-param>
			<param-name>log4j</param-name>
			<param-value>WEB-INF/config/log4j.properties</param-value>
		</init-param>
		<load-on-startup>0</load-on-startup>
	</servlet>

	<!-- 字符过滤器 -->
	<filter>
		<filter-name>encodingFilter</filter-name>
		<filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
	</filter>

	<filter-mapping>
		<filter-name>encodingFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<!-- 请求验证（包括用户权限验证等） -->
	<filter>
		<filter-name>requestFilter</filter-name>
		<filter-class>com.util.RequestFilter</filter-class>
	</filter>

	<filter-mapping>
		<filter-name>requestFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<!-- Login -->
	<servlet>
		<servlet-name>LoginServlet</servlet-name>
		<servlet-class>com.servlet.LoginServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>LoginServlet</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	
	<!-- Logout -->
	<servlet>
		<servlet-name>LogoutServlet</servlet-name>
		<servlet-class>com.servlet.LogoutServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>LogoutServlet</servlet-name>
		<url-pattern>/logout</url-pattern>
	</servlet-mapping>

	<!-- All -->
	<servlet>
		<servlet-name>AllServlet</servlet-name>
		<servlet-class>com.servlet.AllServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>AllServlet</servlet-name>
		<url-pattern>/all</url-pattern>
	</servlet-mapping>

	<!-- DataAnalysis -->
	<servlet>
		<servlet-name>DataAnalysisServlet</servlet-name>
		<servlet-class>com.servlet.DataAnalysisServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>DataAnalysisServlet</servlet-name>
		<url-pattern>/dataAnalysis</url-pattern>
	</servlet-mapping>
	
	<!-- PayAnalysis -->
	<servlet>
		<servlet-name>PayAnalysisServlet</servlet-name>
		<servlet-class>com.servlet.PayAnalysisServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>PayAnalysisServlet</servlet-name>
		<url-pattern>/payAnalysis</url-pattern>
	</servlet-mapping>
	
	<!-- AccountAnalysis -->
	<servlet>
		<servlet-name>AccountAnalysisServlet</servlet-name>
		<servlet-class>com.servlet.AccountAnalysisServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>AccountAnalysisServlet</servlet-name>
		<url-pattern>/accountAnalysis</url-pattern>
	</servlet-mapping>
	
	<!-- BehaviorAnalysis -->
	<servlet>
		<servlet-name>BehaviorAnalysisServlet</servlet-name>
		<servlet-class>com.servlet.BehaviorAnalysisServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>BehaviorAnalysisServlet</servlet-name>
		<url-pattern>/behaviorAnalysis</url-pattern>
	</servlet-mapping>
	
	<!-- open -->
	<servlet>
		<servlet-name>OpenServlet</servlet-name>
		<servlet-class>com.servlet.OpenServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>OpenServlet</servlet-name>
		<url-pattern>/open</url-pattern>
	</servlet-mapping>
</web-app>
